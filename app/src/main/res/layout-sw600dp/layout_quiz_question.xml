<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="8dp">

    <!-- The Progress Border (sits behind) -->
    <com.appslabs.mintx.ui.widget.BorderProgressView
        android:id="@+id/view_timer_border"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/card_question"
        app:layout_constraintBottom_toBottomOf="@id/card_question"
        app:layout_constraintStart_toStartOf="@id/card_question"
        app:layout_constraintEnd_toEndOf="@id/card_question"
        android:layout_margin="0dp"
        android:padding="8dp"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/glass_card_bg"
        app:cardBackgroundColor="@color/mint_surface"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:strokeWidth="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <TextView
                android:id="@+id/tv_category_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_category_label"
                android:paddingHorizontal="16dp"
                android:paddingVertical="6dp"
                android:text="Category"
                android:textColor="@color/text_subtext"
                android:textSize="14sp"
                android:textStyle="bold"
                android:letterSpacing="0.05"
                android:fontFamily="sans-serif-medium" 
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <LinearLayout
                android:id="@+id/ll_difficulty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                
                <TextView
                    android:id="@+id/chip_easy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Easy"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:background="@drawable/bg_category_label"
                    android:backgroundTint="@color/mint_green"
                    android:fontFamily="sans-serif-medium"
                    android:elevation="1dp"/>

                <TextView
                    android:id="@+id/chip_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medium"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:background="@drawable/bg_category_label"
                    android:backgroundTint="@color/mint_gold"
                    android:fontFamily="sans-serif-medium"
                    android:elevation="1dp"/>

                <TextView
                    android:id="@+id/chip_hard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hard"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:background="@drawable/bg_category_label"
                    android:backgroundTint="@color/accent_red"
                    android:fontFamily="sans-serif-medium"
                    android:elevation="1dp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_question_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:gravity="center_vertical|start"
                android:lineSpacingExtra="8dp"
                android:text="Question text will appear here..."
                android:textAlignment="viewStart"
                android:textColor="@color/text_headline"
                android:textSize="22sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                app:layout_constraintTop_toBottomOf="@id/tv_category_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
