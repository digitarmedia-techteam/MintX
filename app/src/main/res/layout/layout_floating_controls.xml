<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_12sdp"
    android:clipToPadding="false">

    <!-- Hint Button (Draggable - Default: Bottom Right) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_hint"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginBottom="@dimen/_86sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardBackgroundColor="@color/mint_floating_card_bg"
        app:cardCornerRadius="@dimen/_25sdp"
        app:cardElevation="@dimen/_8sdp"
        app:strokeColor="@color/accent_glass_border"
        app:strokeWidth="@dimen/_1sdp">

        <ImageView
            android:id="@+id/iv_hint_icon"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_gravity="center"
            android:src="@drawable/ic_hint_bulb"
            app:tint="@color/mint_gold" />

    </com.google.android.material.card.MaterialCardView>

    <!-- Hint Options (Initially Hidden) -->
    <LinearLayout
        android:id="@+id/layout_hint_options"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_50sdp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/card_hint"
        app:layout_constraintEnd_toStartOf="@+id/card_hint"
        app:layout_constraintTop_toTopOf="@+id/card_hint">

        <!-- Spend Points Option -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_hint_points"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            app:cardBackgroundColor="@color/mint_floating_card_bg"
            app:cardCornerRadius="@dimen/_20sdp"
            app:cardElevation="@dimen/_6sdp"
            app:strokeColor="@color/accent_glass_border"
            app:strokeWidth="@dimen/_1sdp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingHorizontal="16dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/mint_coin" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:text="-10"
                    android:textColor="@color/text_headline"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Watch Ad Option -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_hint_ad"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_40sdp"
            app:cardBackgroundColor="@color/mint_floating_card_bg"
            app:cardCornerRadius="@dimen/_20sdp"
            app:cardElevation="@dimen/_6sdp"
            app:strokeColor="@color/accent_glass_border"
            app:strokeWidth="@dimen/_1sdp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingHorizontal="16dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_launcher_foreground"
                    app:tint="@color/mint_primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:text="Watch Ad"
                    android:textColor="@color/text_headline"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <!-- Floating Timer Container (Top Right) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_floating_timer"
        android:layout_width="@dimen/_56sdp"
        android:layout_height="@dimen/_56sdp"
        android:layout_marginTop="@dimen/_130sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardBackgroundColor="@color/mint_floating_card_bg"
        app:cardCornerRadius="@dimen/_28sdp"
        app:cardElevation="@dimen/_8sdp"
        app:strokeColor="@color/accent_glass_border"
        app:strokeWidth="@dimen/_1sdp">

        <com.digitar.mintx.ui.widget.AnalogTimerView
            android:id="@+id/view_floating_timer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_4sdp" />

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
