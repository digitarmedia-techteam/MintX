<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    android:clipToPadding="false">

    <!-- Hint Button (Draggable - Default: Bottom Right) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_hint"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:cardBackgroundColor="@color/mint_surface"
        app:cardCornerRadius="24dp"
        app:cardElevation="6dp"
        android:layout_marginBottom="110dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/iv_hint_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_hint_bulb"
            app:tint="@color/mint_gold" />

    </com.google.android.material.card.MaterialCardView>

    <!-- Hint Options (Initially Hidden) -->
    <LinearLayout
        android:id="@+id/layout_hint_options"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/card_hint"
        app:layout_constraintEnd_toStartOf="@+id/card_hint"
        app:layout_constraintTop_toTopOf="@+id/card_hint">

        <!-- Spend Points Option -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_hint_points"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            app:cardBackgroundColor="@color/mint_surface"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:strokeColor="@color/accent_glass_border"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingHorizontal="12dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/mint_coin" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="-10"
                    android:textColor="@color/text_headline"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Watch Ad Option -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_hint_ad"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            app:cardBackgroundColor="@color/mint_surface"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:strokeColor="@color/accent_glass_border"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingHorizontal="12dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_launcher_foreground"
                    app:tint="@color/mint_primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="Watch Ad"
                    android:textColor="@color/text_headline"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <!-- Floating Timer Container (Top Right) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_floating_timer"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="16dp"
        app:cardBackgroundColor="@color/mint_surface"
        app:cardCornerRadius="36dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.digitar.mintx.ui.widget.AnalogTimerView
            android:id="@+id/view_floating_timer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp" />
            
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
