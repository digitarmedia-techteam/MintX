<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mint_background">

    <!-- Header Section -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_wallet_title"
            style="@style/MintX.Headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wallet_balance"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_balance_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/tv_wallet_title">

            <ImageView
                android:id="@+id/iv_wallet_coin"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/mint_coin"
                app:layout_constraintBottom_toBottomOf="@id/tv_balance"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_balance" />

            <TextView
                android:id="@+id/tv_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="2,450"
                android:textColor="@color/text_headline"
                android:textSize="44sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/iv_wallet_coin"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_approx_value_wallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="≈ ₹12.50 INR"
                android:textColor="@color/text_hint"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@id/tv_balance"
                app:layout_constraintTop_toBottomOf="@id/tv_balance" />

            <TextView
                android:id="@+id/btn_redeem_wallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_redeem_bg"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:text="Redeem Now"
                android:textColor="@color/mint_background"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_balance"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/wallet_disclaimer"
            android:textColor="@color/text_hint"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_balance_area" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Expiry Banner -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_expiry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="@color/accent_glass"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/cl_header"
        app:strokeColor="@color/accent_red"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/ic_dialog_info"
                app:tint="@color/accent_red" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:text="50 Coins expiring in 2 days. Use them to unlock rewards!"
                android:textColor="@color/accent_red"
                android:textSize="13sp" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- History Section -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/glass_card_bg"
        android:paddingTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_expiry">

        <TextView
            android:id="@+id/tv_history_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="@string/wallet_history"
            android:textColor="@color/text_headline"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_history_label">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/item_transaction" />
                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/accent_glass" android:layout_marginHorizontal="24dp"/>
                
                <include android:id="@+id/tx_2" layout="@layout/item_transaction" />
                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/accent_glass" android:layout_marginHorizontal="24dp"/>

                <include android:id="@+id/tx_3" layout="@layout/item_transaction" />
                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/accent_glass" android:layout_marginHorizontal="24dp"/>

                <include android:id="@+id/tx_4" layout="@layout/item_transaction" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>