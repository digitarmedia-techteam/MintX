<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mint_background">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <!-- Header Section -->
            <TextView
                android:id="@+id/tv_greeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dashboard_greeting"
                android:textColor="@color/text_subtext"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_greeting_emoji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="ðŸ‘‹"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@id/tv_greeting"
                app:layout_constraintBottom_toBottomOf="@id/tv_greeting"
                app:layout_constraintTop_toTopOf="@id/tv_greeting" />
            
            <TextView
                android:id="@+id/tv_dashboard_title"
                style="@style/MintX.Headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dashboard_title"
                android:textSize="28sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_greeting" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/navHeaderAvatar"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:padding="12dp"
                android:src="@drawable/user_gif"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
                app:strokeWidth="2dp" />

            <!-- Wallet Card (Glassmorphism) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_wallet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:layout_constraintTop_toBottomOf="@id/tv_dashboard_title"
                app:strokeWidth="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/glass_card_bg"
                    android:padding="24dp">

                    <TextView
                        android:id="@+id/tv_mint_balance_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/wallet_balance"
                        android:textColor="@color/text_subtext"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/iv_coin_icon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/mint_coin"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_mint_balance_label" />

                    <TextView
                        android:id="@+id/tv_balance_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="2,450"
                        android:textColor="@color/text_headline"
                        android:textSize="36sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@id/iv_coin_icon"
                        app:layout_constraintStart_toEndOf="@id/iv_coin_icon"
                        app:layout_constraintTop_toTopOf="@id/iv_coin_icon" />

                    <TextView
                        android:id="@+id/tv_approx_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‰ˆ â‚¹12.50 INR"
                        android:textColor="@color/text_subtext"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="@id/tv_balance_amount"
                        app:layout_constraintTop_toBottomOf="@id/tv_balance_amount" />

                    <TextView
                        android:id="@+id/btn_redeem_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_redeem_bg"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="10dp"
                        android:text="Redeem Now"
                        android:textColor="@color/mint_background"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Daily Streak Section -->
            <TextView
                android:id="@+id/tv_streak_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/daily_streak"
                android:textColor="@color/text_headline"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_wallet" />

            <LinearLayout
                android:id="@+id/ll_streak_dots"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/tv_streak_title">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/streak_dot_active" />

                <View
                    android:layout_width="20dp"
                    android:layout_height="2dp"
                    android:background="@color/quiz_orange" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/streak_dot_active" />

                <View
                    android:layout_width="20dp"
                    android:layout_height="2dp"
                    android:background="@color/quiz_orange" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/streak_dot_active" />

                <View
                    android:layout_width="20dp"
                    android:layout_height="2dp"
                    android:background="@color/quiz_orange" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/streak_dot_inactive" />

                <View
                    android:layout_width="20dp"
                    android:layout_height="2dp"
                    android:background="@color/gray_500" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/streak_dot_active" />
                <View
                    android:layout_width="20dp"
                    android:layout_height="2dp"
                    android:background="@color/quiz_orange" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/streak_dot_inactive" />
                <View
                    android:layout_width="20dp"
                    android:layout_height="2dp"
                    android:background="@color/gray_500" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/streak_dot_inactive" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="4 / 7 days"
                    android:textColor="@color/mint_gold"
                    android:textSize="12sp" />

            </LinearLayout>

            <!-- Live Match / Quiz Card (3D Depth Layer) -->
            <View
                android:id="@+id/view_card_depth"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/bg_card_3d_depth"
                android:translationY="6dp"
                app:layout_constraintBottom_toBottomOf="@id/card_featured"
                app:layout_constraintEnd_toEndOf="@id/card_featured"
                app:layout_constraintStart_toStartOf="@id/card_featured"
                app:layout_constraintTop_toTopOf="@id/card_featured" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_featured"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="32dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                app:layout_constraintTop_toBottomOf="@id/ll_streak_dots"
                app:strokeWidth="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- Background Image -->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/stadium_background" />

                    <!-- Gradient Overlay -->
                    <View
                        android:id="@+id/view_gradient_overlay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_stadium_overlay" />

                    <!-- Live Badge (GIF) -->
                    <ImageView
                        android:id="@+id/iv_live_badge"
                        android:layout_width="60dp"
                        android:layout_height="32dp"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="24dp"
                        android:src="@drawable/live"
                        android:scaleType="fitCenter"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Title -->
                    <TextView
                        android:id="@+id/tv_featured_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginEnd="16dp"
                        android:text="Cricket World Cup: \nIND vs AUS Prediction"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:lineSpacingExtra="2dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/iv_live_badge"
                        app:layout_constraintTop_toBottomOf="@id/iv_live_badge" />

                    <!-- Flags -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="6dp"
                        app:layout_constraintStart_toStartOf="@id/tv_featured_title"
                        app:layout_constraintTop_toBottomOf="@id/tv_featured_title">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/flag_india" />

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginStart="8dp"
                            android:src="@drawable/flag_australia" />
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Predict & Win Button (Floating 3D) -->
            <LinearLayout
                android:id="@+id/btn_predict_win"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@drawable/btn_predict_bg"
                android:gravity="center"
                android:paddingHorizontal="24dp"
                android:orientation="horizontal"
                android:elevation="12dp"
                app:layout_constraintStart_toStartOf="@id/card_featured"
                app:layout_constraintEnd_toEndOf="@id/card_featured"
                app:layout_constraintTop_toBottomOf="@id/card_featured"
                app:layout_constraintBottom_toBottomOf="@id/card_featured">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Predict &amp; Win"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/cricket_ball" />
            </LinearLayout>

            <!-- Quick Actions Section -->
            <TextView
                android:id="@+id/tv_actions_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/quick_actions"
                android:textColor="@color/text_headline"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_predict_win" />

            <LinearLayout
                android:id="@+id/ll_actions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/tv_actions_title">

                <LinearLayout
                    android:id="@+id/btn_quick_quiz"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/action_card_bg"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@android:drawable/ic_menu_help"
                        app:tint="@color/mint_gold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/play_quiz"
                        android:textColor="@color/text_headline"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/reward"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/action_card_bg"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/gift_card" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Reward"
                        android:textColor="@color/text_headline"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/action_card_bg"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/salary"
                        app:tint="@color/mint_gold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/earn"
                        android:textColor="@color/text_headline"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>

            <!-- Expiring Soon Banner -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/action_card_bg"
                android:padding="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_actions">

                <ImageView
                    android:id="@+id/iv_alert"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@android:drawable/ic_dialog_info"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/accent_red" />

                <TextView
                    android:id="@+id/tv_expiring_soon_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="50 Coins expiring in 2 days"
                    android:textColor="@color/accent_red"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/iv_alert"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/use_now"
                    android:textColor="@color/text_headline"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>