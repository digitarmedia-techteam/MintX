<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="6dp"
    app:strokeWidth="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_premium_blue"
        android:padding="0dp">

        <!-- Top Section -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_task_icon"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:scaleType="centerCrop"
                android:src="@drawable/amazon_logo"
                android:elevation="0dp"
                app:shapeAppearanceOverlay="@style/RoundedIcon"
                android:background="@drawable/bg_white_rounded"
                android:padding="2dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_task_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                android:text="Install Amazon App"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:fontFamily="sans-serif-medium"
                app:layout_constraintEnd_toStartOf="@+id/tv_task_reward"
                app:layout_constraintStart_toEndOf="@id/iv_task_icon"
                app:layout_constraintTop_toTopOf="@id/iv_task_icon" />

            <TextView
                android:id="@+id/tv_task_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Pending Verification"
                android:textColor="#CCFFFFFF"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="@id/tv_task_title"
                app:layout_constraintEnd_toEndOf="@id/tv_task_title"
                app:layout_constraintTop_toBottomOf="@id/tv_task_title" />

            <TextView
                android:id="@+id/tv_task_reward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+150 Coins"
                android:textColor="#D84315"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/pill_choice_selector"
                android:backgroundTint="#FFD54F"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:elevation="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Big Floating Coin -->
        <ImageView
            android:id="@+id/iv_big_coin"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/mint_coin"
            android:layout_marginEnd="-20dp"
            android:layout_marginBottom="20dp"
            android:alpha="0.9"
            android:elevation="10dp"
            android:rotation="-15"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/ll_instruction_header"
            app:layout_constraintTop_toBottomOf="@id/cl_header" />

        <!-- Instructions Toggle Button (Glass) -->
        <LinearLayout
            android:id="@+id/ll_instruction_header"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/bg_glass_button"
            android:backgroundTint="#26FFFFFF"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_header"
            app:layout_constraintBottom_toBottomOf="@id/view_divider_helper">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Instructions &amp; Steps"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_instruction_arrow"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="8dp"
                android:src="@android:drawable/arrow_down_float"
                app:tint="@android:color/white" />
        </LinearLayout>

        <!-- Invisible Divider helper for collapsing logic -->
        <View
            android:id="@+id/view_divider_helper"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="0"
            app:layout_constraintTop_toBottomOf="@id/ll_instruction_header" />

        <!-- Collapsible Content -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_instruction_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingBottom="24dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/view_divider_helper"
            tools:visibility="visible">

            <!-- Step 1 -->
            <TextView
                android:id="@+id/tv_step_1_num"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/circle_bg"
                android:backgroundTint="#00E676"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_step_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Download and install the app via the link"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_step_1_num"
                app:layout_constraintTop_toTopOf="@id/tv_step_1_num"
                app:layout_constraintBottom_toBottomOf="@id/tv_step_1_num"/>

            <!-- Connector Line -->
            <View
                android:layout_width="2dp"
                android:layout_height="20dp"
                android:background="#4DFFFFFF"
                app:layout_constraintStart_toStartOf="@id/tv_step_1_num"
                app:layout_constraintEnd_toEndOf="@id/tv_step_1_num"
                app:layout_constraintTop_toBottomOf="@id/tv_step_1_num" />

            <!-- Step 2 -->
            <TextView
                android:id="@+id/tv_step_2_num"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/circle_bg"
                android:backgroundTint="#00E676"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_step_1_num" />

            <TextView
                android:id="@+id/tv_step_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Sign in or create a new account"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_step_2_num"
                app:layout_constraintTop_toTopOf="@id/tv_step_2_num"
                app:layout_constraintBottom_toBottomOf="@id/tv_step_2_num"/>

            <TextView
                android:id="@+id/tv_how_to_claim_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Verification Process"
                android:textColor="#FFD54F"
                android:textStyle="bold"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_step_2" />

            <TextView
                android:id="@+id/tv_verification_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Visit the 'Earn' history page and click 'Claim' once the manual verification is complete (typically 24-48 hours)."
                android:textColor="#CCFFFFFF"
                android:textSize="13sp"
                android:lineSpacingExtra="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_how_to_claim_label" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
