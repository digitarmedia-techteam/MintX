<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shimmer_view_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:shimmer_auto_start="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Top Header Skeleton -->
        <View
            android:id="@+id/sk_progress_text"
            android:layout_width="120dp"
            android:layout_height="16dp"
            android:layout_margin="16dp"
            android:background="@drawable/glass_card_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/sk_accuracy_text"
            android:layout_width="60dp"
            android:layout_height="16dp"
            android:layout_margin="16dp"
            android:background="@drawable/glass_card_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/sk_progress_bar"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/glass_card_bg"
            app:layout_constraintTop_toBottomOf="@id/sk_progress_text" />

        <!-- Timer Skeleton -->
        <View
            android:id="@+id/sk_timer"
            android:layout_width="64dp"
            android:layout_height="34dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/glass_card_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sk_progress_bar" />

        <!-- Breadcrumb Skeleton -->
        <View
            android:id="@+id/sk_breadcrumb"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginStart="24dp"
            android:background="@drawable/glass_card_bg"
            app:layout_constraintBottom_toBottomOf="@id/sk_timer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/sk_timer" />

        <!-- Question Card Skeleton -->
        <View
            android:id="@+id/sk_question_card"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/glass_card_bg"
            app:layout_constraintTop_toBottomOf="@id/sk_timer" />

        <!-- Options Skeleton -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="32dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/sk_question_card">

            <View
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/glass_card_bg" />

            <View
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/glass_card_bg" />

            <View
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/glass_card_bg" />

            <View
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/glass_card_bg" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.facebook.shimmer.ShimmerFrameLayout>
