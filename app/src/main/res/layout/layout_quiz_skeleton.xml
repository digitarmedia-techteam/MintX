<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shimmer_view_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:shimmer_auto_start="true"
    app:shimmer_base_alpha="0.7"
    app:shimmer_direction="left_to_right"
    app:shimmer_duration="1800"
    app:shimmer_highlight_alpha="1.0">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mint_background">

        <!-- ==================== -->
        <!-- HEADER SECTION -->
        <!-- ==================== -->
        <View
            android:id="@+id/sk_header_bg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_180sdp"
            android:background="@drawable/bg_quiz_header"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Back Button -->
        <View
            android:id="@+id/sk_back_btn"
            android:layout_width="@dimen/_48sdp"
            android:layout_height="@dimen/_48sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_32sdp"
            android:alpha="0.6"
            android:background="@drawable/bg_header_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Score Badge -->
        <View
            android:id="@+id/sk_score_badge"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_32sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:alpha="0.6"
            android:background="@drawable/bg_header_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Title Placeholder -->
        <View
            android:layout_width="@dimen/_140sdp"
            android:layout_height="@dimen/_24sdp"
            android:alpha="0.7"
            android:background="@drawable/shimmer_placeholder"
            android:backgroundTint="#50FFFFFF"
            app:layout_constraintBottom_toBottomOf="@id/sk_back_btn"
            app:layout_constraintEnd_toStartOf="@id/sk_score_badge"
            app:layout_constraintStart_toEndOf="@id/sk_back_btn"
            app:layout_constraintTop_toTopOf="@id/sk_back_btn" />

        <!-- Progress Text -->
        <View
            android:id="@+id/sk_progress_text"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_14sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:alpha="0.7"
            android:background="@drawable/shimmer_placeholder"
            android:backgroundTint="#60FFFFFF"
            app:layout_constraintBottom_toTopOf="@id/sk_progress_bar"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Progress Bar -->
        <View
            android:id="@+id/sk_progress_bar"
            android:layout_width="0dp"
            android:layout_height="@dimen/_8sdp"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_28sdp"
            android:alpha="0.6"
            android:background="@drawable/shimmer_placeholder"
            android:backgroundTint="#50FFFFFF"
            app:layout_constraintBottom_toBottomOf="@id/sk_header_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <!-- ==================== -->
        <!-- QUESTION CARD -->
        <!-- ==================== -->

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/sk_question_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_20sdp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="@dimen/_40sdp"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sk_header_bg"
            app:strokeColor="@color/gray_300"
            app:strokeWidth="@dimen/_3sdp">

            <!-- Inner Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                app:cardBackgroundColor="@color/mint_surface"
                app:cardCornerRadius="@dimen/_35sdp"
                app:cardElevation="@dimen/_2sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_24sdp">

                    <!-- Category & Difficulty Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_24sdp"
                            android:alpha="0.5"
                            android:background="@drawable/shimmer_placeholder" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <View
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_24sdp"
                            android:alpha="0.5"
                            android:background="@drawable/shimmer_placeholder" />

<!--                        <View-->
<!--                            android:layout_width="@dimen/_14sdp"-->
<!--                            android:layout_height="@dimen/_24sdp"-->
<!--                            android:layout_marginStart="@dimen/_4sdp"-->
<!--                            android:alpha="0.5"-->
<!--                            android:background="@drawable/shimmer_placeholder" />-->
                    </LinearLayout>

                    <!-- Question Text Lines -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_28sdp"
                        android:alpha="0.6"
                        android:background="@drawable/shimmer_placeholder" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:alpha="0.6"
                        android:background="@drawable/shimmer_placeholder" />

                    <View
                        android:layout_width="@dimen/_180sdp"
                        android:layout_height="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:alpha="0.6"
                        android:background="@drawable/shimmer_placeholder" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_16sdp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </com.google.android.material.card.MaterialCardView>


        <!-- ==================== -->
        <!-- OPTIONS -->
        <!-- ==================== -->

        <LinearLayout
            android:id="@+id/sk_options_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_24sdp"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_16sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sk_question_card">

            <!-- Option 1 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:layout_marginBottom="@dimen/_12sdp"
                app:cardBackgroundColor="@color/mint_surface"
                app:cardCornerRadius="@dimen/_16sdp"
                app:cardElevation="0dp"
                app:strokeColor="@color/accent_glass_border"
                app:strokeWidth="@dimen/_1sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/_16sdp">

                    <View
                        android:layout_width="@dimen/_28sdp"
                        android:layout_height="@dimen/_28sdp"
                        android:layout_marginEnd="@dimen/_12sdp"
                        android:alpha="0.4"
                        android:background="@drawable/shimmer_placeholder" />

                    <View
                        android:layout_width="@dimen/_160sdp"
                        android:layout_height="@dimen/_14sdp"
                        android:alpha="0.4"
                        android:background="@drawable/shimmer_placeholder" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Option 2 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:layout_marginBottom="@dimen/_12sdp"
                app:cardBackgroundColor="@color/mint_surface"
                app:cardCornerRadius="@dimen/_16sdp"
                app:cardElevation="0dp"
                app:strokeColor="@color/accent_glass_border"
                app:strokeWidth="@dimen/_1sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/_16sdp">

                    <View
                        android:layout_width="@dimen/_28sdp"
                        android:layout_height="@dimen/_28sdp"
                        android:layout_marginEnd="@dimen/_12sdp"
                        android:alpha="0.4"
                        android:background="@drawable/shimmer_placeholder" />

                    <View
                        android:layout_width="@dimen/_140sdp"
                        android:layout_height="@dimen/_14sdp"
                        android:alpha="0.4"
                        android:background="@drawable/shimmer_placeholder" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Option 3 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:layout_marginBottom="@dimen/_12sdp"
                app:cardBackgroundColor="@color/mint_surface"
                app:cardCornerRadius="@dimen/_16sdp"
                app:cardElevation="0dp"
                app:strokeColor="@color/accent_glass_border"
                app:strokeWidth="@dimen/_1sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/_16sdp">

                    <View
                        android:layout_width="@dimen/_28sdp"
                        android:layout_height="@dimen/_28sdp"
                        android:layout_marginEnd="@dimen/_12sdp"
                        android:alpha="0.4"
                        android:background="@drawable/shimmer_placeholder" />

                    <View
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="@dimen/_14sdp"
                        android:alpha="0.4"
                        android:background="@drawable/shimmer_placeholder" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Option 4 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                app:cardBackgroundColor="@color/mint_surface"
                app:cardCornerRadius="@dimen/_16sdp"
                app:cardElevation="0dp"
                app:strokeColor="@color/accent_glass_border"
                app:strokeWidth="@dimen/_1sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/_16sdp">

                    <View
                        android:layout_width="@dimen/_28sdp"
                        android:layout_height="@dimen/_28sdp"
                        android:layout_marginEnd="@dimen/_12sdp"
                        android:alpha="0.4"
                        android:background="@drawable/shimmer_placeholder" />

                    <View
                        android:layout_width="@dimen/_130sdp"
                        android:layout_height="@dimen/_14sdp"
                        android:alpha="0.4"
                        android:background="@drawable/shimmer_placeholder" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>


        <!-- ==================== -->
        <!-- FLOATING HINT BUTTON -->
        <!-- ==================== -->

        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/_56sdp"
            android:layout_height="@dimen/_56sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_24sdp"
            app:cardBackgroundColor="@color/mint_surface"
            app:cardCornerRadius="@dimen/_28sdp"
            app:cardElevation="@dimen/_4sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:strokeColor="@color/accent_glass_border"
            app:strokeWidth="@dimen/_1sdp">

            <View
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_28sdp"
                android:layout_gravity="center"
                android:alpha="0.5"
                android:background="@drawable/shimmer_placeholder" />
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.facebook.shimmer.ShimmerFrameLayout>

