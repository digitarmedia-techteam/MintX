<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shimmer_view_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:shimmer_auto_start="true"
    app:shimmer_base_alpha="0.8"
    app:shimmer_direction="left_to_right"
    app:shimmer_duration="1500"
    app:shimmer_highlight_alpha="0.9">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mint_background">

        <!-- ==================== -->
        <!-- HEADER SECTION -->
        <!-- ==================== -->
        <View
            android:id="@+id/sk_header_bg"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/bg_quiz_header"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Back Button -->
        <View
            android:id="@+id/sk_back_btn"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/bg_header_button"
            android:alpha="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Score Badge -->
        <View
            android:id="@+id/sk_score_badge"
            android:layout_width="80dp"
            android:layout_height="36dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/bg_header_button"
            android:alpha="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Title Placeholder (Centered relative to back button) -->
        <View
            android:layout_width="130dp"
            android:layout_height="26dp"
            android:background="@drawable/shimmer_placeholder"
            android:backgroundTint="#40FFFFFF"
            app:layout_constraintBottom_toBottomOf="@id/sk_back_btn"
            app:layout_constraintEnd_toStartOf="@id/sk_score_badge"
            app:layout_constraintStart_toEndOf="@id/sk_back_btn"
            app:layout_constraintTop_toTopOf="@id/sk_back_btn" />

        <!-- Progress Text -->
        <View
            android:id="@+id/sk_progress_text"
            android:layout_width="120dp"
            android:layout_height="16dp"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/shimmer_placeholder"
            android:backgroundTint="#60FFFFFF"
            app:layout_constraintBottom_toTopOf="@+id/sk_progress_bar"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Progress Bar Line -->
        <View
            android:id="@+id/sk_progress_bar"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/shimmer_placeholder"
            android:backgroundTint="#40FFFFFF"
            app:layout_constraintBottom_toBottomOf="@id/sk_header_bg" />


        <!-- ==================== -->
        <!-- QUESTION CARD AREA -->
        <!-- ==================== -->
        
        <!-- Main Card Container -->
        <!-- Uses negative top margin to pull up over header bottom -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/sk_question_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="24dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="42dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/gray_300"
            app:strokeWidth="4dp"
            app:layout_constraintTop_toBottomOf="@id/sk_header_bg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            
            <!-- Inner White Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                app:cardBackgroundColor="@color/mint_surface"
                app:cardCornerRadius="36dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Top Row: Category & Difficulty -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        
                        <View
                            android:layout_width="80dp"
                            android:layout_height="26dp"
                            android:background="@drawable/shimmer_placeholder" />
                            
                        <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>
                        
                        <View
                            android:layout_width="52dp"
                            android:layout_height="26dp"
                            android:background="@drawable/shimmer_placeholder" />

                        <View
                             android:layout_width="14dp"
                             android:layout_height="26dp"
                             android:layout_marginStart="4dp"
                             android:background="@drawable/shimmer_placeholder" />
                    </LinearLayout>

                    <!-- Question Text Placeholders -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="18dp"
                        android:layout_marginTop="32dp"
                        android:background="@drawable/shimmer_placeholder" />
                        
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="18dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/shimmer_placeholder" />
                        
                    <View
                        android:layout_width="200dp"
                        android:layout_height="18dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/shimmer_placeholder" />
                        
                    <!-- Extra spacing at bottom of card -->
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="20dp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </com.google.android.material.card.MaterialCardView>


        <!-- ==================== -->
        <!-- OPTIONS AREA -->
        <!-- ==================== -->

        <LinearLayout
            android:id="@+id/sk_options_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sk_question_card">

            <View
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginBottom="16dp"
                android:alpha="0.4"
                android:background="@drawable/glass_card_bg" />

            <View
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginBottom="16dp"
                android:alpha="0.4"
                android:background="@drawable/glass_card_bg" />

            <View
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginBottom="16dp"
                android:alpha="0.4"
                android:background="@drawable/glass_card_bg" />

            <View
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:alpha="0.4"
                android:background="@drawable/glass_card_bg" />
        </LinearLayout>

        <!-- ==================== -->
        <!-- FLOATING CONTROLS -->
        <!-- ==================== -->
        
        <!-- Hint Button (Bottom Right) -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="32dp"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/accent_glass_border"
            app:strokeWidth="1dp"
            app:cardBackgroundColor="@color/mint_surface"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            
            <View
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:background="@drawable/shimmer_placeholder" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Floating Timer (Top Right, slightly overlapping header/card) -->
        <!-- Positioned relative to card top -->
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.facebook.shimmer.ShimmerFrameLayout>
