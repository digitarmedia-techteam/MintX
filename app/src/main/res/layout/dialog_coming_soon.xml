<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardCornerRadius="24dp"
    app:cardElevation="16dp"
    android:background="@android:color/transparent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_coming_soon"
        android:padding="32dp">

        <!-- Cricket ball icon -->
        <ImageView
            android:id="@+id/iv_cricket_ball_dialog"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/cricket_ball"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Main Title -->
        <TextView
            android:id="@+id/tv_coming_soon_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Coming Soon!"
            android:textColor="@android:color/white"
            android:textSize="28sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:shadowColor="#40000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            app:layout_constraintTop_toBottomOf="@id/iv_cricket_ball_dialog"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Sparkle emoji or decorative text -->
        <TextView
            android:id="@+id/tv_emoji_sparkle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="âœ¨ðŸðŸŽ¯âœ¨"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@id/tv_coming_soon_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/tv_coming_soon_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Get ready to predict &amp; win big!\nStay tuned for exciting updates!"
            android:textColor="#F0FFFFFF"
            android:textSize="14sp"
            android:textAlignment="center"
            android:lineSpacingExtra="4dp"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintTop_toBottomOf="@id/tv_emoji_sparkle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- OK Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Got It!"
            android:textColor="@color/mint_gold"
            android:textStyle="bold"
            android:textSize="16sp"
            app:backgroundTint="@android:color/white"
            app:cornerRadius="20dp"
            app:elevation="8dp"
            android:paddingHorizontal="32dp"
            android:paddingVertical="12dp"
            app:layout_constraintTop_toBottomOf="@id/tv_coming_soon_subtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>

