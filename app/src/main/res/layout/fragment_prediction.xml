<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mint_background">

    <!-- Header -->
    <TextView
        android:id="@+id/tv_prediction_title"
        style="@style/MintX.Headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/prediction_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toTopOf="@id/ll_bottom_bar"
        app:layout_constraintTop_toBottomOf="@id/tv_prediction_title">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp">

            <!-- Match Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_match"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="@color/mint_surface"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeWidth="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="24dp">

                    <TextView
                        android:id="@+id/tv_match_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/accent_glass"
                        android:padding="8dp"
                        android:text="@string/match_type"
                        android:textAlignment="center"
                        android:textColor="@color/text_subtext"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Team A -->
                    <LinearLayout
                        android:id="@+id/ll_team_a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toStartOf="@id/tv_vs"
                        app:layout_constraintHorizontal_bias="0.3"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_match_label">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/iv_team_a"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:padding="2dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/india"
                            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
                            app:strokeColor="@color/accent_glass_border"
                            app:strokeWidth="2dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/team_a_name"
                            android:textColor="@color/text_headline"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_vs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VS"
                        android:textColor="@color/text_hint"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@id/ll_team_a"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/ll_team_a" />

                    <!-- Team B -->
                    <LinearLayout
                        android:id="@+id/ll_team_b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="@id/ll_team_a"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.7"
                        app:layout_constraintStart_toEndOf="@id/tv_vs"
                        app:layout_constraintTop_toTopOf="@id/ll_team_a">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/iv_team_b"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:padding="2dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/australia"
                            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
                            app:strokeColor="@color/accent_glass_border"
                            app:strokeWidth="2dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/team_b_name"
                            android:textColor="@color/text_headline"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_timer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/ll_team_a">

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/ic_timer"
                            app:tint="@color/accent_red" />

                        <TextView
                            android:id="@+id/tv_timer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:text="@string/match_countdown"
                            android:textColor="@color/accent_red"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Choice Section -->
            <TextView
                android:id="@+id/tv_prompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/predict_win_prompt"
                android:textColor="@color/text_headline"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_match" />

            <LinearLayout
                android:id="@+id/ll_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/tv_prompt">

                <TextView
                    android:id="@+id/btn_option_a"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/prediction_option_selector"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="20dp"
                    android:text="@string/team_a_name"
                    android:textColor="@color/text_headline"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/btn_option_draw"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/prediction_option_selector"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="20dp"
                    android:text="@string/draw"
                    android:textColor="@color/text_headline"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/btn_option_b"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/prediction_option_selector"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="20dp"
                    android:text="@string/team_b_name"
                    android:textColor="@color/text_headline"
                    android:textSize="16sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_disclaimer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="24dp"
                android:gravity="center"
                android:text="@string/prediction_disclaimer"
                android:textColor="@color/text_hint"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_options" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Bar (CTA) -->
    <LinearLayout
        android:id="@+id/ll_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mint_surface"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/btn_lock_prediction"
            style="@style/MintX.Button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:enabled="false"
            android:text="@string/submit_prediction"
            app:cornerRadius="16dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>