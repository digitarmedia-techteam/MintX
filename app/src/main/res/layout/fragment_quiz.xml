<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mint_background">

    <!-- Quiz Content Container -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_quiz_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <!-- Top Toolbar/Header -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_quiz_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:background="@color/mint_background"
            android:elevation="2dp"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/btn_skip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skip"
                android:textColor="@color/text_subtext"
                android:textSize="14sp"
                android:textStyle="bold"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/tv_quiz_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question 3 of 5"
                android:textColor="@color/text_headline"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/btn_skip"
                app:layout_constraintEnd_toStartOf="@+id/cl_timer_placeholder"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
                
            <!-- Invisible placeholder to balance the title centering if needed, 
                 or just rely on constraints. Timer is separate overlay -->
            <View
                android:id="@+id/cl_timer_placeholder"
                android:layout_width="48dp" 
                android:layout_height="1dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/pb_quiz_progress"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginTop="12dp"
                android:progress="0"
                app:indicatorColor="@color/mint_gold"
                app:layout_constraintTop_toBottomOf="@id/btn_skip"
                app:trackColor="@color/accent_glass_border"
                app:trackCornerRadius="2dp"
                app:trackThickness="4dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Timer (Fixed Top Right Overlay) -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bg_category_badge"
            android:paddingHorizontal="10dp"
            android:paddingVertical="6dp"
            android:elevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_quiz_header">

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/pb_timer_ring"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:progress="50"
                android:visibility="gone"
                app:indicatorColor="@color/mint_gold"
                app:indicatorSize="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/tv_timer_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:12"
                android:textColor="@color/text_headline"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Main Content (Scrollable for flexibility, but structure is simplified) -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintTop_toBottomOf="@id/cl_quiz_header"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"
                 android:paddingTop="24dp"
                 android:paddingBottom="42dp">

                <!-- Question Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="32dp"
                    android:layout_marginTop="16dp" 
                    app:cardBackgroundColor="@color/mint_surface"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="2dp"
                    app:strokeColor="@color/accent_glass_border"
                    app:strokeWidth="1dp">
                    
                    <TextView
                        android:id="@+id/tv_question_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="24dp"
                        android:text="@string/ques"
                        android:textAlignment="viewStart"
                        android:gravity="start"
                        android:textColor="@color/text_headline"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:lineSpacingExtra="6dp" />
                </com.google.android.material.card.MaterialCardView>

                <!-- Options -->
                <LinearLayout
                    android:id="@+id/ll_options"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/btn_option_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="60dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/pill_choice_selector"
                        android:paddingHorizontal="24dp"
                        android:paddingVertical="18dp"
                        android:gravity="center_vertical|start"
                        android:textAlignment="viewStart"
                        android:text="Option 1"
                        android:textColor="@color/text_headline"
                        android:textSize="16sp"
                        android:lineSpacingExtra="4dp" />

                    <TextView
                        android:id="@+id/btn_option_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="60dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/pill_choice_selector"
                        android:paddingHorizontal="24dp"
                        android:paddingVertical="18dp"
                        android:gravity="center_vertical|start"
                        android:textAlignment="viewStart"
                        android:text="Option 2"
                        android:textColor="@color/text_headline"
                        android:textSize="16sp"
                        android:lineSpacingExtra="4dp"/>

                    <TextView
                        android:id="@+id/btn_option_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="60dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/pill_choice_selector"
                        android:paddingHorizontal="24dp"
                        android:paddingVertical="18dp"
                        android:gravity="center_vertical|start"
                        android:textAlignment="viewStart"
                        android:text="Option 3"
                        android:textColor="@color/text_headline"
                        android:textSize="16sp"
                        android:lineSpacingExtra="4dp" />

                    <TextView
                        android:id="@+id/btn_option_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="60dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/pill_choice_selector"
                        android:paddingHorizontal="24dp"
                        android:paddingVertical="18dp"
                        android:gravity="center_vertical|start"
                        android:textAlignment="viewStart"
                        android:text="Option 4"
                        android:textColor="@color/text_headline"
                        android:textSize="16sp"
                        android:lineSpacingExtra="4dp" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Skeleton Layout -->
    <include
        android:id="@+id/layout_skeleton"
        layout="@layout/layout_quiz_skeleton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <!-- Summary Screen (Hidden by default) -->
    <ScrollView
        android:id="@+id/cl_summary"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mint_background"
        android:elevation="10dp"
        android:fillViewport="true"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/tv_summary_title"
                style="@style/MintX.Headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:text="Quiz Complete!"
                android:textSize="28sp" />

            <!-- Circular Accuracy Indicator -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_summary_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp">

                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/pb_summary_ring"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:progress="0"
                    app:indicatorSize="140dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:trackColor="@color/accent_glass_border"
                    app:trackCornerRadius="8dp"
                    app:trackThickness="12dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/tv_summary_accuracy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:textColor="@color/text_headline"
                        android:textSize="32sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Accuracy"
                        android:textColor="@color/text_subtext"
                        android:textSize="12sp" />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Stats Breakdown Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_summary_stats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="@color/mint_surface"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/accent_glass_border"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <include
                        android:id="@+id/row_total"
                        layout="@layout/item_summary_row" />

                    <include
                        android:id="@+id/row_correct"
                        layout="@layout/item_summary_row" />

                    <include
                        android:id="@+id/row_wrong"
                        layout="@layout/item_summary_row" />

                    <include
                        android:id="@+id/row_skipped"
                        layout="@layout/item_summary_row" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="16dp"
                        android:background="@color/accent_glass_border" />

                    <TextView
                        android:id="@+id/tv_total_points"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total Points: 0"
                        android:textAlignment="center"
                        android:textColor="@color/mint_gold"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Spacer to push content up if needed, or just let it flow -->
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Action Buttons -->
            <LinearLayout
                android:id="@+id/ll_actions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:orientation="vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_watch_ad"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="12dp"
                    android:text="Watch Ad &amp; Get 2X Points"
                    android:textColor="@color/mint_gold"
                    app:strokeColor="@color/mint_gold"
                    app:strokeWidth="1dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_play_again"
                        style="@style/MintX.Button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/mint_surface"
                        android:text="Play Again"
                        android:textColor="@color/text_headline"
                        app:strokeColor="@color/accent_glass_border"
                        app:strokeWidth="1dp" />

                    <Button
                        android:id="@+id/btn_finish"
                        style="@style/MintX.Button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:text="Finish" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>