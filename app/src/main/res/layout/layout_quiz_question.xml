<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="8dp">

    <!-- The Progress Border (sits behind) -->
    <com.digitar.mintx.ui.widget.BorderProgressView
        android:id="@+id/view_timer_border"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/card_question"
        app:layout_constraintBottom_toBottomOf="@id/card_question"
        app:layout_constraintStart_toStartOf="@id/card_question"
        app:layout_constraintEnd_toEndOf="@id/card_question"
        android:layout_margin="0dp"
        android:padding="6dp"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="32dp"
        app:cardElevation="2dp"
        app:strokeWidth="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/tv_category_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_category_label"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:text="Linux"
                android:textColor="@color/text_subtext"
                android:textSize="12sp"
                android:textStyle="bold"
                android:letterSpacing="0.05"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/tv_question_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|start"
                android:lineSpacingExtra="6dp"
                android:text="Q1. You need to search for a specific text pattern recursively in all files within a directory on a Linux server. Which command should you use?"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
