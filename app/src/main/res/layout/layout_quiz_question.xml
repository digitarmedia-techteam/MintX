<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_12sdp"
    android:layout_marginVertical="@dimen/_8sdp">

    <!-- The Progress Border (sits behind) -->
    <com.digitar.mintx.ui.widget.BorderProgressView
        android:id="@+id/view_timer_border"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/card_question"
        app:layout_constraintBottom_toBottomOf="@id/card_question"
        app:layout_constraintStart_toStartOf="@id/card_question"
        app:layout_constraintEnd_toEndOf="@id/card_question"
        android:layout_margin="0dp"
        android:padding="@dimen/_6sdp"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_6sdp"
        android:background="@drawable/glass_card_bg"
        app:cardBackgroundColor="@color/mint_surface"
        app:cardCornerRadius="@dimen/_32sdp"
        app:cardElevation="@dimen/_2sdp"
        app:strokeWidth="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_15sdp">

            <TextView
                android:id="@+id/tv_category_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_category_label"
                android:paddingHorizontal="@dimen/_12sdp"
                android:paddingVertical="@dimen/_4sdp"
                android:text="Linux"
                android:textColor="@color/text_subtext"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                android:letterSpacing="0.05"
                android:fontFamily="sans-serif-medium" 
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <LinearLayout
                android:id="@+id/ll_difficulty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                
                <TextView
                    android:id="@+id/chip_easy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Easy"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/_10ssp"
                    android:textStyle="bold"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:paddingVertical="@dimen/_4sdp"
                    android:background="@drawable/bg_category_label"
                    android:backgroundTint="@color/mint_green"
                    android:fontFamily="sans-serif-medium"
                    android:elevation="@dimen/_1sdp"/>

                <TextView
                    android:id="@+id/chip_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medium"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/_10ssp"
                    android:textStyle="bold"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:paddingVertical="@dimen/_4sdp"
                    android:background="@drawable/bg_category_label"
                    android:backgroundTint="@color/mint_gold"
                    android:fontFamily="sans-serif-medium"
                    android:elevation="@dimen/_1sdp"/>

                <TextView
                    android:id="@+id/chip_hard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hard"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/_10ssp"
                    android:textStyle="bold"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:paddingVertical="@dimen/_4sdp"
                    android:background="@drawable/bg_category_label"
                    android:backgroundTint="@color/accent_red"
                    android:fontFamily="sans-serif-medium"
                    android:elevation="@dimen/_1sdp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_question_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_24sdp"
                android:gravity="center_vertical|start"
                android:lineSpacingExtra="@dimen/_4sdp"
                android:text="Q1. You need to search for a specific text pattern recursively in all files within a directory on a Linux server. Which command should you use?"
                android:textAlignment="viewStart"
                android:textColor="@color/text_headline"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                app:layout_constraintTop_toBottomOf="@id/tv_category_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
