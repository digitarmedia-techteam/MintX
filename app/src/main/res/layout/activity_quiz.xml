<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mint_background"
    tools:context=".QuizActivity">

    <!-- Quiz Content -->

    <!-- Skeleton Layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_quiz_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <!-- Scrollable Content -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toTopOf="@id/footer_spacer"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:orientation="vertical">

                <!-- Header (Moves inside) -->
                <include
                    android:id="@+id/header"
                    layout="@layout/layout_quiz_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp" />

                <!-- Timer (Hidden, replaced by floating) -->
                <include
                    android:id="@+id/timer"
                    layout="@layout/layout_quiz_timer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:visibility="gone" />

                <!-- Question Card -->
                <include
                    android:id="@+id/question"
                    layout="@layout/layout_quiz_question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp" />

                <!-- Options -->
                <include
                    android:id="@+id/options"
                    layout="@layout/layout_quiz_options"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"/>

            </LinearLayout>
        </ScrollView>

        <!-- Spacer or Footer area if needed -->
        <View
            android:id="@+id/footer_spacer"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        android:id="@+id/layout_skeleton"
        layout="@layout/layout_quiz_skeleton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <!-- Floating Controls (Timer + Hint) -->
    <include
        android:id="@+id/layout_floating"
        layout="@layout/layout_floating_controls"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="12dp" />
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/mint_surface"
        app:itemIconTint="@color/mint_gold"
        app:itemTextColor="@color/text_subtext"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_menu" />
    <!-- Summary Screen (Overlaid) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_summary"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mint_background"
        android:elevation="10dp"
        android:padding="24dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_summary_title"
            style="@style/MintX.Headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Quiz Complete!"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_summary_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_summary_title">

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/pb_summary_ring"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:progress="0"
                app:indicatorSize="100dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:trackColor="@color/accent_glass_border"
                app:trackCornerRadius="8dp"
                app:trackThickness="10dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tv_summary_accuracy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textColor="@color/text_headline"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Accuracy"
                    android:textColor="@color/text_subtext"
                    android:textSize="10sp" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_summary_stats"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/mint_surface"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toTopOf="@id/ll_actions"
            app:layout_constraintTop_toBottomOf="@id/cl_summary_progress"
            app:strokeColor="@color/accent_glass_border"
            app:strokeWidth="1dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <include
                        android:id="@+id/row_total"
                        layout="@layout/item_summary_row" />

                    <include
                        android:id="@+id/row_correct"
                        layout="@layout/item_summary_row" />

                    <include
                        android:id="@+id/row_correct_points"
                        layout="@layout/item_summary_row" />

                    <include
                        android:id="@+id/row_wrong"
                        layout="@layout/item_summary_row" />

                    <include
                        android:id="@+id/row_negative_points"
                        layout="@layout/item_summary_row" />

                    <include
                        android:id="@+id/row_skipped"
                        layout="@layout/item_summary_row" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="8dp"
                        android:background="@color/accent_glass_border" />

                    <TextView
                        android:id="@+id/tv_total_points"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total Points: 0"
                        android:textAlignment="center"
                        android:textColor="@color/mint_gold"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </ScrollView>
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:id="@+id/ll_actions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_watch_ad"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="12dp"
                android:text="Watch Ad &amp; Get 2X Points"
                android:textColor="@color/mint_gold"
                app:strokeColor="@color/mint_gold"
                app:strokeWidth="1dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_play_again"
                    style="@style/MintX.Button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/mint_surface"
                    android:text="Play Again"
                    android:textColor="@color/text_headline"
                    app:strokeColor="@color/accent_glass_border"
                    app:strokeWidth="1dp" />

                <Button
                    android:id="@+id/btn_finish"
                    style="@style/MintX.Button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:text="Finish" />
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
