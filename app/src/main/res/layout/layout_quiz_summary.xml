<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_summary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mint_background"
    android:elevation="@dimen/_10sdp"
    android:padding="@dimen/_24sdp"
    android:visibility="gone">

    <TextView
        android:id="@+id/tv_summary_title"
        style="@style/MintX.Headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        android:text="Quiz Complete!"
        android:textSize="@dimen/_24ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_summary_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_summary_title">

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/pb_summary_ring"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:progress="0"
            app:indicatorSize="@dimen/_100sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:trackColor="@color/accent_glass_border"
            app:trackCornerRadius="@dimen/_8sdp"
            app:trackThickness="@dimen/_10sdp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_summary_accuracy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:textColor="@color/text_headline"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accuracy"
                android:textColor="@color/text_subtext"
                android:textSize="@dimen/_10ssp" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Level Progress Bar -->
    <LinearLayout
        android:id="@+id/layout_level_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl_summary_progress">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_level_current"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Level 1"
                android:textColor="@color/text_headline"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_level_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 / 30 XP"
                android:textColor="@color/text_subtext"
                android:textSize="14sp" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/pb_level_progress"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:progressDrawable="@drawable/progress_level"
            android:progress="0" />
        
            <TextView
                android:id="@+id/tv_level_next_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Keep playing to level up!"
                android:textColor="@color/mint_primary"
                android:textSize="12sp" 
                android:gravity="end"
                android:layout_marginTop="4dp"/>

    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_summary_stats"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="@color/mint_surface"
        app:cardCornerRadius="@dimen/_24sdp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toTopOf="@id/ll_actions"
        app:layout_constraintTop_toBottomOf="@id/layout_level_info"
        app:strokeColor="@color/accent_glass_border"
        app:strokeWidth="@dimen/_1sdp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <include
                    android:id="@+id/row_total"
                    layout="@layout/item_summary_row" />

                <include
                    android:id="@+id/row_correct"
                    layout="@layout/item_summary_row" />

                <include
                    android:id="@+id/row_correct_points"
                    layout="@layout/item_summary_row" />

                <include
                    android:id="@+id/row_wrong"
                    layout="@layout/item_summary_row" />

                <include
                    android:id="@+id/row_negative_points"
                    layout="@layout/item_summary_row" />

                <include
                    android:id="@+id/row_skipped"
                    layout="@layout/item_summary_row" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="8dp"
                    android:background="@color/accent_glass_border" />

                <TextView
                    android:id="@+id/tv_total_points"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total Points: 0"
                    android:textAlignment="center"
                    android:textColor="@color/mint_gold"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </ScrollView>
    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:id="@+id/ll_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_watch_ad"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_56sdp"
            android:layout_marginBottom="@dimen/_12sdp"
            android:text="Watch Ad &amp; Get 2X Points"
            android:textColor="@color/mint_gold"
            app:strokeColor="@color/mint_gold"
            app:strokeWidth="@dimen/_1sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_play_again"
                style="@style/MintX.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:backgroundTint="@color/mint_surface"
                android:text="Play Again"
                android:textColor="@color/text_headline"
                app:strokeColor="@color/accent_glass_border"
                app:strokeWidth="1dp" />

            <Button
                android:id="@+id/btn_finish"
                style="@style/MintX.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="Finish" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
