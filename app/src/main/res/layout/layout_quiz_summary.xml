<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_summary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mint_background"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    android:visibility="gone">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_20sdp"
        android:paddingBottom="@dimen/_40sdp">

        <!-- Title -->
        <TextView
            android:id="@+id/tv_summary_title"
            style="@style/MintX.Headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_24sdp"
            android:text="ðŸŽ‰ Quiz Complete!"
            android:textSize="@dimen/_26ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Accuracy Ring -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_summary_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_24sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_summary_title">

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/pb_summary_ring"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:progress="0"
                app:indicatorSize="@dimen/_120sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:trackColor="@color/accent_glass_border"
                app:trackCornerRadius="@dimen/_8sdp"
                app:trackThickness="@dimen/_12sdp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tv_summary_accuracy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textColor="@color/text_headline"
                    android:textSize="@dimen/_28ssp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Accuracy"
                    android:textColor="@color/text_subtext"
                    android:textSize="@dimen/_12ssp" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Stats Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_summary_stats"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_24sdp"
            app:layout_constraintWidth_max="@dimen/quiz_max_width"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardBackgroundColor="@color/mint_surface"
            app:cardCornerRadius="@dimen/_20sdp"
            app:cardElevation="0dp"
            app:layout_constraintTop_toBottomOf="@id/cl_summary_progress"
            app:strokeColor="@color/accent_glass_border"
            app:strokeWidth="@dimen/_1sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_16sdp">

                <include
                    android:id="@+id/row_total"
                    layout="@layout/item_summary_row" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginVertical="@dimen/_8sdp"
                    android:background="@color/accent_glass_border" />

                <include
                    android:id="@+id/row_correct"
                    layout="@layout/item_summary_row" />

                <include
                    android:id="@+id/row_correct_points"
                    layout="@layout/item_summary_row" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginVertical="@dimen/_8sdp"
                    android:background="@color/accent_glass_border" />

                <include
                    android:id="@+id/row_wrong"
                    layout="@layout/item_summary_row" />

                <include
                    android:id="@+id/row_negative_points"
                    layout="@layout/item_summary_row" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginVertical="@dimen/_8sdp"
                    android:background="@color/accent_glass_border" />

                <include
                    android:id="@+id/row_skipped"
                    layout="@layout/item_summary_row" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:background="@color/mint_gold" />

                <TextView
                    android:id="@+id/tv_total_points"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total Points: 0"
                    android:textAlignment="center"
                    android:textColor="@color/mint_gold"
                    android:textSize="@dimen/_20ssp"
                    android:textStyle="bold" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Level Progress -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/layout_level_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            app:layout_constraintWidth_max="@dimen/quiz_max_width"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardBackgroundColor="@color/mint_surface"
            app:cardCornerRadius="@dimen/_20sdp"
            app:cardElevation="0dp"
            app:layout_constraintTop_toBottomOf="@id/card_summary_stats"
            app:strokeColor="@color/accent_glass_border"
            app:strokeWidth="@dimen/_1sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_16sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_level_current"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Level 1"
                        android:textColor="@color/text_headline"
                        android:textSize="@dimen/_16ssp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_level_points"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 / 30 XP"
                        android:textColor="@color/text_subtext"
                        android:textSize="@dimen/_14ssp" />
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/pb_level_progress"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_10sdp"
                    android:progress="0"
                    android:progressDrawable="@drawable/progress_level" />

                <TextView
                    android:id="@+id/tv_level_next_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:gravity="end"
                    android:text="Keep playing to level up!"
                    android:textColor="@color/mint_primary"
                    android:textSize="@dimen/_11ssp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:id="@+id/ll_actions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            app:layout_constraintWidth_max="@dimen/quiz_max_width"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/layout_level_info">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_watch_ad"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_56sdp"
                android:layout_marginBottom="@dimen/_12sdp"
                android:text="ðŸ“º Watch Ad &amp; Get 2X Points"
                android:textColor="@color/mint_gold"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold"
                app:cornerRadius="@dimen/_16sdp"
                app:strokeColor="@color/mint_gold"
                app:strokeWidth="@dimen/_2sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_play_again"
                    style="@style/MintX.Button"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_56sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/mint_surface"
                    android:text="ðŸ”„ Play Again"
                    android:textColor="@color/text_headline"
                    android:textSize="@dimen/_14ssp"
                    app:cornerRadius="@dimen/_16sdp"
                    app:strokeColor="@color/accent_glass_border"
                    app:strokeWidth="@dimen/_1sdp" />

                <Button
                    android:id="@+id/btn_finish"
                    style="@style/MintX.Button"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_56sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_weight="1"
                    android:text="âœ“ Finish"
                    android:textSize="@dimen/_14ssp"
                    app:cornerRadius="@dimen/_16sdp" />
            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

