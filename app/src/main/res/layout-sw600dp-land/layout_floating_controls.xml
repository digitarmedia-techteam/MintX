<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:clipToPadding="false">

    <!-- Guideline at 75% for Right Column content -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_right_col"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

    <!-- Timer: Centered in Right Column (75%-100%) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_floating_timer"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toEndOf="@id/guide_right_col"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardBackgroundColor="@color/mint_floating_card_bg"
        app:cardCornerRadius="40dp"
        app:cardElevation="6dp"
        app:strokeColor="@color/accent_glass_border"
        app:strokeWidth="1dp">

        <com.appslabs.mintx.ui.widget.AnalogTimerView
            android:id="@+id/view_floating_timer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="6dp" />
    </com.google.android.material.card.MaterialCardView>

    <!-- Hint Button: Below Timer in Right Column -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_hint"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/card_floating_timer"
        app:layout_constraintStart_toEndOf="@id/guide_right_col"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardBackgroundColor="@color/mint_floating_card_bg"
        app:cardCornerRadius="32dp"
        app:cardElevation="6dp"
        app:strokeColor="@color/accent_glass_border"
        app:strokeWidth="1dp">

        <ImageView
            android:id="@+id/iv_hint_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_hint_bulb"
            app:tint="@color/mint_gold" />
    </com.google.android.material.card.MaterialCardView>

    <!-- Hint Options -->
    <LinearLayout
        android:id="@+id/layout_hint_options"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/card_hint"
        app:layout_constraintTop_toTopOf="@+id/card_hint"
        app:layout_constraintBottom_toBottomOf="@+id/card_hint"
        android:layout_marginEnd="16dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_hint_points"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            app:cardBackgroundColor="@color/mint_floating_card_bg"
            app:cardCornerRadius="24dp"
            app:cardElevation="6dp"
            app:strokeColor="@color/accent_glass_border"
            app:strokeWidth="1dp">
             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:gravity="center"
                 android:paddingHorizontal="16dp">
                 <ImageView android:layout_width="20dp" android:layout_height="20dp" android:src="@drawable/mint_coin" />
                 <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="8dp" android:text="-10" android:textStyle="bold" android:textSize="16sp" android:textColor="@color/text_headline" android:fontFamily="sans-serif-medium"/>
             </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_hint_ad"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            app:cardBackgroundColor="@color/mint_floating_card_bg"
            app:cardCornerRadius="24dp"
            app:cardElevation="6dp"
            app:strokeColor="@color/accent_glass_border"
            app:strokeWidth="1dp">
             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:gravity="center"
                 android:paddingHorizontal="16dp">
                 <ImageView android:layout_width="20dp" android:layout_height="20dp" android:src="@drawable/ic_launcher_foreground" app:tint="@color/mint_primary" />
                 <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="8dp" android:text="Watch Ad" android:textStyle="bold" android:textSize="16sp" android:textColor="@color/text_headline" android:fontFamily="sans-serif-medium"/>
             </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
