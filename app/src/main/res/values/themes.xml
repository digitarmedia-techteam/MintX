<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MintX" parent="Base.Theme.MintX" />

    <style name="Base.Theme.MintX" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/mint_primary</item>
        <item name="colorPrimaryVariant">@color/mint_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/mint_secondary</item>
        <item name="colorSecondaryVariant">@color/mint_secondary</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item> <!-- Default to light for Light Mode -->
        <!-- Backgrounds -->
        <item name="android:windowBackground">@color/mint_background</item>
        <item name="android:colorBackground">@color/mint_background</item>
        
        <!-- BottomSheet Theme -->
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialogTheme</item>
    </style>

    <!-- Custom Text Styles -->
    <style name="MintX.Headline" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/text_headline</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MintX.Subtext" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/text_subtext</item>
    </style>

    <style name="MintX.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/mint_gold</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:paddingVertical">12dp</item>
    </style>

    <!-- Bottom Sheet Dialog Theme -->
    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/mint_background</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="RoundedIcon" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="OtpBoxStyle">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/bg_otp_box</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
</resources>
