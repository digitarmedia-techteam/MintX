<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Correct State -->
    <item android:state_activated="true">
        <shape>
            <solid android:color="#2600E676" />
            <corners android:radius="28dp" />
            <stroke android:width="2dp" android:color="@color/mint_green" />
        </shape>
    </item>
    <!-- Incorrect State -->
    <item android:state_selected="true">
         <shape>
            <solid android:color="#26FF4B2B" />
            <corners android:radius="28dp" />
            <stroke android:width="2dp" android:color="@color/accent_red" />
        </shape>
    </item>
    <!-- Default State -->
    <item>
        <shape>
            <solid android:color="@color/mint_surface" />
            <corners android:radius="28dp" />
            <stroke android:width="1dp" android:color="@color/mint_surface_light" />
        </shape>
    </item>
</selector>
