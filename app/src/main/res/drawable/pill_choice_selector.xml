<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Correct Answer (Activated) -->
    <item android:state_activated="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/success_background"/>
            <stroke android:color="@color/mint_green" android:width="2dp"/>
            <corners android:radius="16dp"/>
        </shape>
    </item>

    <!-- Wrong Answer (Selected) -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
             <solid android:color="@color/error_background"/>
             <stroke android:color="@color/accent_red" android:width="2dp"/>
             <corners android:radius="16dp"/>
        </shape>
    </item>

    <!-- Default State -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/mint_surface"/>
            <stroke android:color="@color/gray_500" android:width="2dp"/>
            <corners android:radius="16dp"/>
        </shape>
    </item>
</selector>
