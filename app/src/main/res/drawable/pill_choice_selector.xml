<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_activated="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFEDD5"/> <!-- Orange tint -->
            <stroke android:color="@color/quiz_orange" android:width="2dp"/>
            <corners android:radius="30dp"/>
        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:shape="rectangle">
             <solid android:color="#FEE2E2"/> <!-- Red tint for wrong -->
             <stroke android:color="@color/accent_red" android:width="2dp"/>
             <corners android:radius="30dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <corners android:radius="30dp"/>
            <!-- No stroke or very light stroke -->
        </shape>
    </item>
</selector>
