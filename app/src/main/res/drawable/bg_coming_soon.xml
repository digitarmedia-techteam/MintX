<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    
    <!-- Gradient background for the coming soon dialog -->
    <gradient
        android:angle="135"
        android:startColor="#4A90E2"
        android:centerColor="#7B68EE"
        android:endColor="#FF6B9D"
        android:type="linear" />
    
    <corners android:radius="24dp" />
    
    <!-- Stroke for a nice border -->
    <stroke
        android:width="3dp"
        android:color="#FFFFFF" />
    
    <padding
        android:left="24dp"
        android:top="20dp"
        android:right="24dp"
        android:bottom="20dp" />
</shape>
