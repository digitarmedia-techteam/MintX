<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <corners android:radius="16dp" />
    
    <gradient
        android:angle="135"
        android:startColor="@color/mint_surface"
        android:endColor="@color/mint_surface_light"
        android:type="linear" />
    
    <stroke
        android:width="1.5dp"
        android:color="@color/mint_gold" />
    
    <padding
        android:bottom="8dp"
        android:left="14dp"
        android:right="14dp"
        android:top="8dp" />
</shape>
